<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="user">

	<!-- 유저 조회 -->
	<select id="selectUserByUserName" parameterType="hashmap" resultType="hashmap">
		SELECT USERNAME
		     , PASSWORD
		  FROM user
		 WHERE USERNAME = 'test'
	</select>

	<!-- 유저 롤 조회 -->
	<select id="selectUserRolesByUserName" parameterType="hashmap" resultType="string">
		SELECT 'ROLE_USER'
			 , 'user:write'
			 , 'user:read'
		  FROM user
		 WHERE USERNAME = 'test'
	</select>

	



</mapper>